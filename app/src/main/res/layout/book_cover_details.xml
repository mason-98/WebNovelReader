<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="300dp"
    android:id="@+id/bookCoverHolder">


    <androidx.cardview.widget.CardView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        app:cardBackgroundColor="#4D000000"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        <ImageView
            android:id="@+id/grid_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Book Cover Image"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/inLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:contentDescription="Indicator showing if its in library or not"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_bookmarked" />

        <TextView
            android:id="@+id/grid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@drawable/gradient"
            android:ellipsize="end"
            android:fadingEdge="vertical"
            android:gravity="bottom|center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:shadowColor="#0D000000"
            android:singleLine="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />


    </androidx.cardview.widget.CardView>

</RelativeLayout>